@page "/"
@using jinx_debt_tracker.Models
@using jinx_debt_tracker.Services
@inject GameService gameService
@inject PlayerService playerService
@inherits IgnisAsyncComponentBase

<PageTitle>Jinx Score Tracker</PageTitle>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mx-auto max-w-2xl">
        <!-- Hero Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl mb-4">
                Jinx Score Tracker
            </h1>
            <p class="text-lg leading-8 text-gray-600 dark:text-gray-400">
                Check how much you owe & adjust scores below.
            </p>
        </div>

        @if (IsLoading)
        {
            <!-- Loading spinner while data is being fetched -->
            <div class="flex justify-center items-center space-x-2 py-12">
                <div class="w-8 h-8 border-4 border-solid border-transparent border-t-4 border-t-blue-600 dark:border-t-white rounded-full animate-spin"></div>
                <span class="text-lg text-gray-600 dark:text-gray-400">Loading...</span>
            </div>
        }
        else if (!HasSelectedPlayers)
        {
            <!-- Player selection form -->
            <div class="rounded-2xl bg-white dark:bg-gray-900 p-8 shadow-lg ring-1 ring-gray-900/5 dark:ring-gray-800">
                <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">View Your Game</h2>
                
                <div class="space-y-6">
                    <div>
                        <label for="player-select" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Who are you?
                        </label>
                        <select id="player-select" 
                                @bind="SelectedPlayerId" 
                                @bind:after="OnPlayerSelected"
                                class="w-full px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                            <option value="0">-- Select Your Name --</option>
                            @foreach (var player in Players)
                            {
                                <option value="@player.ID">@player.Name</option>
                            }
                        </select>
                    </div>

                    <div>
                        <label for="opponent-select" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Who did you score against?
                        </label>
                        <select id="opponent-select" 
                                @bind="SelectedOpponentId" 
                                @bind:after="OnOpponentSelected"
                                class="w-full px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                                disabled="@(SelectedPlayerId == 0)">
                            <option value="0">-- Select Opponent --</option>
                            @foreach (var player in Players.Where(p => p.ID != SelectedPlayerId))
                            {
                                <option value="@player.ID">@player.Name</option>
                            }
                        </select>
                    </div>

                    <button type="button"
                            @onclick="LoadGames"
                            disabled="@(SelectedPlayerId == 0 || SelectedOpponentId == 0)"
                            class="w-full px-4 py-2.5 bg-blue-600 dark:bg-white dark:text-black text-white rounded-lg hover:bg-blue-700 dark:hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 disabled:bg-gray-400 dark:disabled:bg-gray-800 disabled:cursor-not-allowed transition-colors font-medium">
                        View Game
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Show GameTabs once players are selected and games are loaded -->
            <div class="mt-8">
                <!-- Home Button -->
                <div class="mb-4 flex justify-start">
                    <button type="button"
                            @onclick="GoHome"
                            class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-950 transition-colors">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        Home
                    </button>
                </div>
                <GameTabs Games=@FilteredGames OnGameUpdated="HandleGameUpdated"/>
            </div>
        }
    </div>
</div>

@code
{
    public List<Game> AllGames = new();
    public List<Game> FilteredGames = new();
    public List<Player> Players = new();
    
    private int SelectedPlayerId { get; set; } = 0;
    private int SelectedOpponentId { get; set; } = 0;
    private bool IsLoading { get; set; } = true;
    private bool HasSelectedPlayers { get; set; } = false;
    
    // Fetch data asynchronously
    protected override async Task OnInitializedAsync(CancellationToken cancellationToken)
    {
        Update();
        await playerService.GetAllPlayers();
        Players = playerService.PlayerList.Values.OrderBy(p => p.Name).ToList();
        AllGames = await gameService.GetAllGames();
        IsLoading = false;
        Update();
    }

    private void OnPlayerSelected()
    {
        // Reset opponent selection if same player is selected
        if (SelectedOpponentId == SelectedPlayerId)
        {
            SelectedOpponentId = 0;
        }
        Update();
    }

    private void OnOpponentSelected()
    {
        Update();
    }

    private void LoadGames()
    {
        if (SelectedPlayerId == 0 || SelectedOpponentId == 0)
            return;

        // Filter games to only show games between the selected players
        FilteredGames = AllGames.Where(g => 
            (g.Player1_ID == SelectedPlayerId && g.Player2_ID == SelectedOpponentId) ||
            (g.Player1_ID == SelectedOpponentId && g.Player2_ID == SelectedPlayerId)
        ).ToList();

        HasSelectedPlayers = true;
        Update();
    }

    private void HandleGameUpdated(Game updatedGame)
    {
        // Update the game in AllGames to keep it in sync
        var index = AllGames.FindIndex(g => g.ID == updatedGame.ID);
        if (index >= 0)
        {
            AllGames[index] = updatedGame;
        }
        
        // Also update FilteredGames
        var filteredIndex = FilteredGames.FindIndex(g => g.ID == updatedGame.ID);
        if (filteredIndex >= 0)
        {
            FilteredGames[filteredIndex] = updatedGame;
        }
        
        Update();
    }

    private void GoHome()
    {
        // Reset to player selection
        HasSelectedPlayers = false;
        SelectedPlayerId = 0;
        SelectedOpponentId = 0;
        FilteredGames.Clear();
        Update();
    }
}